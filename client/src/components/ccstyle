/* Light Theme */
:root {
  --color-textColor: #e91e63; /* Main pink for text */
  --color-primaryColor: #e91e63; /* Buttons, links, main accents */
  --color-backgroundColor: #fafafa; /* Page background */
  --color-secondaryColor: #f8bbd0; /* Subtle highlights, cards */
  --color-accentColor: #c2185b; /* Hover, secondary accents */
  --color-mutedColor: #eeeeee; /* Muted background or borders */
  --color-foregroundColor: #666666; /* Body text or secondary text */
}

/* Dark Theme */
.dark {
  --color-textColor: #ffc1e3; /* Softer pink for readability on dark */
  --color-primaryColor: #ff69b4; /* Buttons, links */
  --color-backgroundColor: #222222; /* Page background */
  --color-secondaryColor: #6d1b7b; /* Cards or highlights */
  --color-accentColor: #e91e63; /* Hover, secondary accents */
  --color-mutedColor: #333333; /* Dark card backgrounds, muted elements */
  --color-foregroundColor: #aaaaaa; /* Secondary text on dark bg */
}

/* Utility Classes for Tailwind integration */
.text-color {
  color: var(--color-textColor);
}

.bg-primary {
  background-color: var(--color-primaryColor);
}

.bg-secondary {
  background-color: var(--color-secondaryColor);
}

.bg-accent {
  background-color: var(--color-accentColor);
}

.bg-muted {
  background-color: var(--color-mutedColor);
}

.bg-foreground {
  background-color: var(--color-foregroundColor);
}

.text-foreground {
  color: var(--color-foregroundColor);
}

.text-muted {
  color: var(--color-mutedColor);
}
